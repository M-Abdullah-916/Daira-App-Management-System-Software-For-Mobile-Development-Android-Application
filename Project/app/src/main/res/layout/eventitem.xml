<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp">

    <ImageView
        android:id="@+id/eventimg"
        android:layout_width="338dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gradientlogin" />

    <TextView
        android:id="@+id/eventnamedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="56dp"
        android:hint="Name"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/eventimg"
        app:layout_constraintEnd_toEndOf="@+id/eventimg"
        app:layout_constraintTop_toTopOf="@+id/eventimg"
        app:layout_constraintVertical_bias="0.853" />

    <TextView
        android:id="@+id/eventdatedetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="Date"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="@+id/eventimg"
        app:layout_constraintEnd_toStartOf="@+id/eventnamedetail"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/eventimg"
        app:layout_constraintTop_toTopOf="@+id/eventimg"
        app:layout_constraintVertical_bias="0.861" />
</androidx.constraintlayout.widget.ConstraintLayout>